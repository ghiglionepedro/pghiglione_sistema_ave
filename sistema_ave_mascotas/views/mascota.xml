<odoo>

        <!-- mascota Tree View -->
        <record id="view_mascota_tree" model="ir.ui.view">
            <field name="name">mascota.tree</field>
            <field name="model">mascota</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="imagen" />
                    <field name="nombre" />
                    <field name="especie" />
                    <field name="raza" />
                    <field name="pelaje" />
                    <field name="sexo" />
                    <field name="edad" />
                </tree>
            </field>
        </record>

        <!-- mascota Form View -->
        <record id="view_mascota_form" model="ir.ui.view">
            <field name="name">mascota.form</field>
            <field name="model">mascota</field>
            <field name="arch" type="xml">
                <form string="mascota">
                    <sheet>
                        <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                        <field name="active" invisible="1" />
                        <field name="imagen" widget='image' class="oe_avatar" />
                        <div class="oe_title">
                            <h1>
                                <field name="nombre" />
                            </h1>
                        </div>
                        <group id="main">
                            <group id="left">
                                <field name="especie" />
                                <field
                                name="raza" />
                                <field
                                name="sexo" />
                            </group>
                            <group id="right">
                                <field name="edad" />
                                <field name="pelaje" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field
                        name="message_ids"
                        widget="mail_thread"
                        options="{'post_refresh': 'recipients'}"
                    />
                    </div>
                </form>
            </field>
        </record>

        <!-- Search for mascota -->
        <record id="view_mascota_search" model="ir.ui.view">
            <field name="name">mascota.search</field>
            <field name="model">mascota</field>
            <field name="arch" type="xml">
                <search string="mascotas">
                    <field
                    name="nombre"
                    filter_domain="[('nombre', 'ilike', self)]"
                    string="Nombre"
                />
                    <field name="especie" />
                    <field name="raza" />
                    <field name="pelaje" />
                    <separator />
                    <field name="sexo" />
                    <separator />
                    <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active', '=', False)]"
                />
                    <separator />
                </search>
            </field>
        </record>


        <!-- Animal Tree View -->
    <record id="view_mascota_dueño_tree" model="ir.ui.view">
        <field name="name">view.mascota.dueño.tree</field>
        <field name="model">mascota</field>
        <field name="inherit_id" ref="mascota.view_mascota_tree" />
        <field name="arch" type="xml">
            <field name="color_id" position="after">
                <field name="partner_id" />
            </field>
        </field>
    </record>

    <!-- Animal Form View -->
    <record id="view_mascota_dueño_form" model="ir.ui.view">
        <field name="name">view.mascota.dueño.form</field>
        <field name="model">mascota</field>
        <field name="inherit_id" ref="mascota.view_mascota_form" />
        <field name="arch" type="xml">
            <field name="species_id" position="after">
                <field name="partner_id" />
            </field>
        </field>
    </record>

    <!-- Animal Kanban View -->
    <record id="view_mascota_dueño_kanban" model="ir.ui.view">
        <field name="name">view.mascota.dueño.kanban</field>
        <field name="model">mascota</field>
        <field name="inherit_id" ref="mascota.view_mascota_kanban" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="partner_id" />
            </field>
            <xpath expr="//div[hasclass('oe_kanban_details')]/ul" position="inside">
                <li t-if="record.partner_id.raw_value"><field name="partner_id" /></li>
            </xpath>
        </field>
    </record>

    <!-- Animal Search View -->
    <record id="view_mascota_owner_search" model="ir.ui.view">
        <field name="name">view.mascota.dueño.search</field>
        <field name="model">mascota</field>
        <field name="inherit_id" ref="mascota.view_mascota_search" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="partner_id" />
            </field>
            <filter name="gender" position="before">
                <filter
                    name="partner_id"
                    string="Dueño"
                    domain=""
                    context="{'group_by': 'partner_id'}"
                />
            </filter>
        </field>
    </record>


        <record id="action_mascota" model="ir.actions.act_window">
            <field name="name">mascotas</field>
            <field name="res_model">mascota</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_mascota_search" />
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Crear mascota</p>
            </field>
        </record>

</odoo>
