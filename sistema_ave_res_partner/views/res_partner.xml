<odoo>
    <data>
        <record model="ir.ui.view" id="pghiglione_res_partner_contact_form">
            <field name="name">pghiglione_res_partner_contact_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='parent_id']" position="attributes">
                        <attribute name="invisible">1</attribute> <!-- Ocultar el campo Compañía -->
                    </xpath>
                    <xpath expr="//field[@name='company_type']" position="attributes">
                        <attribute name="default">individual</attribute> <!-- Establecer selección predeterminada -->
                    </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="pghiglione_res_partner_view_partner_latam_form">
            <field name="name">pghiglione_res_partner_view_partner_latam_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="l10n_latam_base.view_partner_latam_form"/>
            <field name="arch" type="xml">
                    <xpath expr="//field[@name='vat']" position="attributes">
                        <attribute name="default">DNI</attribute> <!-- Establecer selección predeterminada -->
                    </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="pghiglione_res_partner_base_view_partner_form">
            <field name="name">pghiglione_res_partner_base_view_partner_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="l10n_ar.base_view_partner_form"/>
            <field name="arch" type="xml">
                    <xpath expr="//field[@name='l10n_ar_afip_responsibility_type_id']" position="attributes">
                        <attribute name="default">Consumidor Final</attribute> <!-- Establecer selección predeterminada -->
                    </xpath>

            </field>
        </record>

    </data>
</odoo>