<odoo>
    <data>
        <record model="ir.ui.view" id="pghiglione_res_partner_contact_form">
            <field name="name">pghiglione_res_partner_contact_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='parent_id']" position="attributes">
                        <attribute name="invisible">1</attribute> <!-- Ocultar el campo Compañía -->
                    </xpath>
                    <xpath expr="//field[@name='company_type']" position="attributes">
                        <attribute name="default">individual</attribute> <!-- Establecer selección predeterminada -->
                    </xpath>
            </field>
        </record>

           <!-- Partner Form View -->
            <record id="view_partner_animal_owner_form" model="ir.ui.view">
                <field name="model">res.partner</field>
                <field name="inherit_id" ref="base.view_partner_form" />
                <field name="arch" type="xml">
                    <div name="button_box" position="inside">
                        <button
                            class="oe_stat_button"
                            type="object"
                            name="action_view_mascotas"
                            icon="fa-pencil-square-o"
                            context="{'default_partner_id': id}"
                        >
                            <div class="o_stat_info">
                                <field name="mascotas_count" class="o_stat_value" />
                                <span class="o_stat_text"> Animals</span>
                            </div>
                        </button>
                    </div>
                </field>
            </record>
    </data>
</odoo>